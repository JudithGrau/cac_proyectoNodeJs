<%- include ('../partials/menu.ejs') -%>

<!-- <h1>Productos</h1> -->

<h1 class="title text-center">Productos</h1>
<hr/>

<a class="button bg-primary ml-5 p-2 text-white" style="border-radius: 10px;" href="/productos/create">Nuevo Producto</a>

<% productos.forEach((producto)=> { %>
    <!-- <h2>    
        <a href="/productos/<%= producto.id %>"><%= producto.title %></a>
    </h2> -->
    <section class="container my-5">
        <div class="row">
    
            <div class="card col-4" style="align-items: center;border-radius: 10px;">
                <!-- <img style="width: 100px;" src=<%= producto.thumbnail %> /> -->
                <h4 class="title text-center"><a href="/productos/<%= producto.id %>"><%= producto.nombre %></a></h4>
                <!-- <p class="text-center">Precio: $<%= producto.price %></p>
                <p class="text-center">Id: <%= producto.id %></p> -->
            </div>
            <a class="button bg-warning ml-5 p-2 text-white" style="border-radius: 10px;" href="/productos/<%= producto.id %>/edit">Editar</a>
            
            <form class="form-delete" action="/productos/<%= producto.id %>/delete?_method=DELETE" method="post">
                <button type="submit" class="bg-danger ml-2 p-2 text-white" style="border-radius: 10px;" >Borrar</button>
            </form>
        </div>
    </section>
<% }) %>

<script>
    const forms = document.querySelectorAll('.form-delete')
    
    forms.forEach(form => {
        form.addEventListener('submit', (event) => {
            event.preventDefault()

            if (confirm('Â¿Esta seguro?') == true) {
                event.target.submit()
            }
        })
    })
</script>
